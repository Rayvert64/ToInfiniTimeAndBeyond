{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Debug - Openocd docker Remote",
            "type": "cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "servertype": "external",
            "showDevDebugOutput": "raw",
            // Connect to an already running OpenOCD instance
            "gdbPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/arm-none-eabi-gdb",
            "gdbTarget": "127.0.0.1:3333",
            "svdFile": "${workspaceRoot}/nrf52.svd",
            //"runToEntryPoint": "main",
            //// Work around for stopping at main on restart
            //"postRestartCommands": [
            //    "break main",
            //    "continue"
            //]
        },
        {
            "name": "Debug - Openocd Local",
            "type": "cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "servertype": "openocd",
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath": "${env:ARM_NONE_EABI_TOOLCHAIN_PATH}/bin/arm-none-eabi-gdb",
            // Connect to an already running OpenOCD instance
            "gdbTarget": "localhost:3333",
            "svdFile": "${workspaceRoot}/nrf52.svd",
            "runToEntryPoint": "true",
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        },
        {
            "cwd": "${workspaceRoot}",
            // TODO: find better way to get latest build filename
            "executable": "${command:cmake.launchTargetPath}",
            "name": "Debug OpenOCD ST-LINK pinetime-app",
            "request": "launch",
            "type": "cortex-debug",
            "showDevDebugOutput": "raw",
            "servertype": "openocd",
            "runToEntryPoint": "true",
            "gdbPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/arm-none-eabi-gdb",
            "gdbTarget": "127.0.0.1:3333",
            "svdFile": "${workspaceRoot}/nrf52.svd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/nrf52.cfg"
            ]
        }
    ]
}